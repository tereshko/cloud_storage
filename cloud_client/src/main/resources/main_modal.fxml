<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" prefHeight="600.0" prefWidth="800.0"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="controllers.Controller_main">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" onAction="#buttonExitAction"/>
        </Menu>
    </MenuBar>
    <HBox spacing="5">
        <ComboBox />
        <TextField editable="false" HBox.hgrow="ALWAYS" />
        <Button text="Up" />
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </VBox.margin>
    </HBox>

    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS" />

    <HBox spacing="5">
        <Button maxWidth="Infinity" text="Copy" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Delete" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Exit" HBox.hgrow="ALWAYS" onAction="#buttonExitAction"/>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>
</VBox>
